<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/rvExperience"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@id/tvExperienceLabel"
            android:layout_marginTop="8dp"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:id="@+id/tvExperienceLabel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:drawableStart="@android:drawable/arrow_down_float" android:text="@string/btntxt_experience"
            android:textSize="24sp"
            android:textColor="@color/heading" android:drawablePadding="8dp"/>
</android.support.constraint.ConstraintLayout>