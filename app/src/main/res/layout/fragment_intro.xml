<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:fillViewport="true">


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:id="@+id/tvName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:gravity="center"
            android:textSize="36sp" android:textColor="@color/heading"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/tvAddress"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:gravity="center"
            android:textSize="18sp" android:textColor="@color/subheading"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/tvMobileNumber" app:layout_constraintTop_toBottomOf="@+id/tvAddress"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" android:gravity="center" android:textSize="14sp"
            android:textColor="@color/subheading"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/tvEmail"
            app:layout_constraintTop_toBottomOf="@+id/tvMobileNumber" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:gravity="center"
            android:textSize="14sp" android:textColor="@color/subheading"/>

